

package mynamespace.mymodule.mypackage;

function sample_for() begin

  constant numbers = [1,2,3,4,5,6];

  variable sum = 0;

  repeat for i in numbers begin
    sum += i;
  end

  return sum;

end

function sample_while() begin

  variable x = 1;

  repeat while x < 100 begin
    x = x * 2;
  end

  return x;

end

function sample_until() begin

  variable x = 1;

  repeat until x > 100 begin
    x = x * 2;
  end

  return x;

end

